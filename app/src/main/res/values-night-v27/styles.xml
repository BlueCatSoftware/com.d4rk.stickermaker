    <style name="AppThemeWithOutActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@color/colorDarkMode</item>
        <item name="android:navigationBarColor">@color/colorDarkMode</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
